<p id="notice"><%= notice %></p>

<h3>
  <%= link_to_user_profile(@photo.sender) %>  sent to <%= link_to_user_profile(@photo.receiver) %>
</h3>
<%= link_to image_tag(@photo.avatar.url(:medium)),  @photo.avatar.url(:original) %>
<%= @photo.memo %>

<% form_for @comment do |f| %>
  <%= f.hidden_field :commentable_type %>
  <%= f.hidden_field :commentable_id %>
  <p>
    <strong>Comments</strong><br />
    <%= f.text_area :comment, :size => '30x5' %>
  </p>
<p><%= f.submit "submit" %></p>
<% end %>
<div class='commentlist'>
  <% @comments.each do |c| %>
    <div class='comment'>
      <h3><span class='goal_author'><%= link_to_user_profile(c.user) %></span> say ...</h3>
      <div><%= c.comment %></div>
    </div>
  <% end %>
</div>
