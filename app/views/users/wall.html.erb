<h2><%= link_to @user.name, @user%></h2>
<h3>Receive</h3>
<div>
  <% @receive_photos.each do |photo|%>
    <div>
      From: <%= link_to photo.sender.name, user_path(photo.sender)  %>
      <%= link_to image_tag(photo.avatar.url(:medium)),  photo.avatar.url(:original) %>
      <%= photo.memo %>
    </div>
<% end %>
</div>
<h3>Sent</h3>
<div>
  <% @sent_photos.each do |photo|%>
    <div>
      To : <%= link_to photo.receiver.name, user_path(photo.receiver)%>
      <%= link_to image_tag(photo.avatar.url(:medium)),  photo.avatar.url(:original)%>
      <%= photo.memo %>
    </div>
  <% end %>
</div>
