<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :login, 'Nickname' %><br />
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :native_id, 'NativeLanguage'%><br />
    <%=select_tag 'user[native_ids][1]', options_for_select(Language.select_options) %>
    <%=select_tag 'user[native_ids][2]', options_for_select(Language.select_options),{ :include_blank => true } %>
    <%=select_tag 'user[native_ids][3]', options_for_select(Language.select_options),{ :include_blank => true } %>
  </p>
  <p>
    <%= f.label :practice_id, 'NativeLanguage'%><br />
    <%=select_tag 'user[practice_ids][1]',options_for_select(Language.select_options) %>
    <%=select_tag 'user[practice_ids][2]',options_for_select(Language.select_options),{:include_blank => true } %>
    <%=select_tag 'user[practice_ids][3]',options_for_select(Language.select_options),{:include_blank => true } %>
  </p>
  <p>
      <label for="user_country_name">You are Living in</label>
      <%= country_select("user", "country_name") %>
  </p>
  <p>
      <label for="user_country_name">Where is your hometown</label>
      <%= country_select("user", "hometown_country_name") %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <h4>It is not a dating place</h4>
  <p><%= f.submit %></p>
<% end %>
