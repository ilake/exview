<% set_meta_tags :noindex => true, :nofollow => true %>

<p><strong>From:</strong> <%= @message.sender == current_user ? link_to("You", user_path(current_user)) : link_to(h(@message.sender.login), user_path(current_user)) %></p>
<p><strong>Received:</strong> <%= @message.created_at.to_s(:long) %></p>
<p><strong>To:</strong> <%= @message.recipient == current_user ? link_to("You", user_path(current_user)) : link_to(h(@message.recipient.login), user_path(current_user)) %></p>
<p>
  <strong>Message</strong><br />
  <%=h @message.body %>
</p>
<p>
  <% if @message.recipient == current_user %>
	  <%= link_to "Reply", new_user_message_path(current_user, :reply_to => @message) %> |
  <% end %>
  <%= link_to "Inbox", user_messages_path(current_user)%>
</p>
